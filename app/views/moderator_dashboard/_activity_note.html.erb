<h2>Note Updates</h2>

<table class="striped w-full">
  <thead>
    <tr>
      <th>User</th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody>
    <% @dashboard.notes.each do |activity| %>
      <tr>
        <td><%= link_to_user(activity.user) %></td>
        <td><%= link_to activity.count, note_versions_path(:search => {:updater_id => activity.user.id}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
